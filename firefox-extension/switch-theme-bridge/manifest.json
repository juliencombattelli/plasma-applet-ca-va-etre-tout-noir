{
  "name": "Switch-theme bridge",
  "description": "Theme switcher bridge for native messaging apps",
  "version": "1.0",

  "manifest_version": 2,
  "icons": {
    "48": "icons/message.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "ping_pong@example.org",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": ["nativeMessaging", "management"]

}
