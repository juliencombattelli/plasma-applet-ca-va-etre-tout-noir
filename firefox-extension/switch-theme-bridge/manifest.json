{
  "name": "Switch-theme bridge",
  "description": "Theme switcher bridge for native messaging apps",
  "version": "1.2",

  "manifest_version": 2,
  "icons": {
    "48": "icons/blacksun.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "switch-theme-bridge.cavafairetoutnoir@github.com",
      "strict_min_version": "55.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": ["nativeMessaging", "management"]

}
